/* miniprogram/pages/index/index.wxss */
page {
  background: #fafafa;
}
  
.nav-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  height: 102rpx;
  background-color: #fff;
  box-shadow: 0 8rpx 10rpx 0 rgba(0,0,0,0.01);
}
.nav {
  position: relative;
  margin: 0 120rpx;
}
.nav-text {
  display: flex;
  align-items: center;
  text-align: center;
}
.nav-text view {
  flex: 1;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #646464;
}
.nav-text view.on {
  color: #333;
  /* color: #faab00; */
  font-weight: bold;
}
.line {
  position: absolute;
  bottom: 12rpx;
  left: 0;
  width: 50%;
  height: 6rpx;
  transition: transform .2s;
}
.line:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 36%;
  height: 100%;
  border-radius: 200rpx;
  background-image: linear-gradient(to right,rgba(250, 171, 0, 0.5),#faab00)
}
.content swiper {
  height: 100vh;
  
}
.content scroll-view {
  height: 100vh;
  padding-top: 102rpx;
  box-sizing: border-box;
}
.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #fff;
  margin-top: -102rpx;
  box-sizing: border-box;
  padding-bottom: 180rpx;
}
.login image {
  width: 140rpx;
  height: 140rpx;
}
.login view {
  font-size: 36rpx;
  color: #333;
  padding-top: 32rpx;
}
.login .tips {
  color: #666;
  font-size: 24rpx;
  padding: 20rpx 0 60rpx;
}
.login button {
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  width: 500rpx;
}
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}
.empty image {
  width: 359rpx;
  height: 169rpx;
  opacity: .3;
  transform: scale(.8)
}
.empty view {
  font-size: 30rpx;
  color: #666;
  padding-top: 30rpx;
}
.tips {
  color: #999;
  font-size: 20rpx;
  text-align: center;
  padding: 20rpx 0
}
