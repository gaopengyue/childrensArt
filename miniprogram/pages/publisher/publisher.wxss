/* miniprogram/pages/publisher/publisher.wxss */
.publish {
  padding-bottom: 60rpx;
}
.picker {
  padding: 28rpx;
  color: #666;
  margin-right: 200rpx;

}
.title {
  padding: 28rpx 28rpx 0;
  border-top: 1rpx solid #efefef;
}
.title:first-child {
  border: 0;
}
.add {
  color: #666;
  margin: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add .add-image {
  padding: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1rpx dashed #efefef;
  border-radius: 6rpx;

}
.add .show-image {
  width: 100%;
}
textarea {
  border: 1rpx solid #efefef;
  border-radius: 6rpx;
  margin: 28rpx;
  padding: 28rpx;
  box-sizing: border-box;
  width: 694rpx;
  font-size: 28rpx;
  height: 200rpx;
}
.btn {
  position: fixed;
  right: 28rpx;
  top: 0rpx;
  width: 180rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: red;
  text-align: center;
  border-radius: 100rpx;
  margin-top: 28rpx;
}