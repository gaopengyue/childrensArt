/* components/scheduleList/scheduleList.wxss */
.schedule-list {
  margin: 16rpx
}
.schedule-list .item {
  width: 49%;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  float: left;
  box-sizing: border-box;
  padding: 10rpx;
  margin: 0 .5% 16rpx;
}
.schedule-list .item image {
	width: 100%;
  display: block;
}
.schedule-list .item .img-wrap {
  height: 320rpx;
  overflow: hidden;
}
.schedule-list .item .text {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 16rpx 0;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}
.schedule-list .item .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #333;
  padding: 0 16rpx;
}
.schedule-list .item .info .tag {
  padding: 6rpx 20rpx;
  background: rgba(250, 171, 0, 0.1);
  color: #faab00;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
}
.schedule-list .item .info .tag view {
  width: 28rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  background-image: linear-gradient(135deg,rgba(250, 171, 0, 0.5),#faab00);
  border-radius: 50%;
  color: #fff;
  margin-right: 5rpx;
}
.schedule-list .item .info .likes {
  position: relative;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.schedule-list .item .info .likes image {
  width: 32rpx;
  height: 32rpx;
  padding-right: 6rpx;
}
.is-like {
  column-count: initial;
}
.is-like .item .img-wrap {
  max-height: 500rpx;
}
.is-like .item .info {
  padding: 16rpx;
}
.is-like .item .info .likes image {
  display: none;
}